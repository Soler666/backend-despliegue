{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "lib": ["es2019"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "isolatedModules": false,

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}